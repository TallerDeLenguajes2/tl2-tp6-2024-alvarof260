@{
    ViewData["Title"] = "Agregar producto a presupuesto";
}
@using TP6MVC.ViewModels
@model UpdatePresupuestoViewModel


<form asp-action="Update" asp-route-id="@Model.Presupuesto.IdPresupuesto" method="post">
    <div class="form-group">
        <label for="productoId">Seleccionar Producto:</label>
        <select id="productoId" name="productoId" class="form-control">
            @foreach (var producto in @Model.Productos)
            {
                <option value="@producto.IdProducto">@producto.Descripcion - $@producto.Precio</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="cantidad">Cantidad:</label>
        <input type="number" id="cantidad" name="cantidad" class="form-control" min="1" />
    </div>

    <button type="submit" class="btn btn-primary">Agregar Producto</button>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}
