@{
    ViewData["Title"] = "Crear Presupuesto";
}
@using TP6MVC.Models
@model Presupuesto

<div class="container mt-5">
    <h2 class="text-center mb-4">Crear Presupuesto</h2>

    <form asp-controller="Presupuesto" asp-action="Create" class="border p-4 shadow-sm rounded">
        <div class="form-group mb-3">
            <label asp-for="Cliente.IdCliente" class="form-label fw-bold">Id Cliente</label>
            <input asp-for="Cliente.IdCliente" class="form-control" placeholder="Ingrese el id del Cliente" type="number"/>
            <span asp-validation-for="Cliente.IdCliente" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>