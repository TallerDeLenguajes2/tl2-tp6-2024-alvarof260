@{
    ViewData["Title"] = "Lista de Presupuesto";
}

@model List<Presupuesto>

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Presupuestos</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var presupuesto in Model)
            {
                @if (presupuesto.Detalle.Count() > 0)
                {
                    @foreach (var presupuestoDetalle in presupuesto.Detalle)
                    {
                        <tr>
                            @* Mostrar el nombre solo en la primera fila del presupuesto *@
                            @if (presupuesto.Detalle.IndexOf(presupuestoDetalle) == 0)
                            {
                                <td rowspan="@presupuesto.Detalle.Count">@presupuesto.NombreDestinario</td>
                            }
                            <td>@presupuestoDetalle.Producto.Descripcion</td>
                            <td>@presupuestoDetalle.Cantidad</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@presupuesto.IdPresupuesto"
                                    class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Presupuesto</a>
    </div>
</div>
