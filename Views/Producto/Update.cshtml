@model Producto

@{
    ViewData["Title"] = "Actualizar Producto";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Actualizar Producto</h2>

    <form asp-action="Update" method="post" class="border p-4 shadow-sm rounded">
        <input type="hidden" asp-for="IdProducto" /> <!-- Campo oculto para el ID del producto -->

        <div class="form-group mb-3">
            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
            <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción del producto" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Precio" class="form-label fw-bold">Precio</label>
            <input asp-for="Precio" class="form-control" placeholder="Ingrese el precio del producto" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}
