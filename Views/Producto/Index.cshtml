@{
    ViewData["Title"] = "Lista de Productos";
}

@model List<Producto>

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Productos</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Precio</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio.ToString("C")</td> <!-- Muestra el precio en formato moneda -->
                    <td>
                        <a asp-action="Update" asp-route-id="@producto.IdProducto" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@producto.IdProducto"
                            class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Producto</a>
    </div>
</div>
