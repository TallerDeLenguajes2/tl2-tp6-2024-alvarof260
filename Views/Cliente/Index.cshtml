@{
    ViewData["Title"] = "Lista de Clientes";
}

@model List<Cliente>

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Clientes</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            No hay Clientes disponibles.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">nombre</th>
                    <th scope="col" class="text-center">email</th>
                    <th scope="col" class="text-center">telefono</th>
                    <th scope="col" class="text-center">acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td class="align-middle text-center">@cliente.Nombre</td>
                        <td class="align-middle text-center">@cliente.Email</td>
                        <td class="align-middle text-center">@cliente.Telefono</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@cliente.IdCliente"
                            class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Cliente</a>
    </div>
</div>